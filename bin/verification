#!/bin/bash -e

package_path="$MOPM_ROOT/definitions/$MOPM_ARCHITECTURE-$MOPM_PLATFORM-$1.mopm"

if ! [ -f "$package_path" ]; then
  echo "The package is not exist on definition" 1>&2
  exit 1
fi


if grep -E '^#mopm verification:' < "$package_path" | cut -d ":" -f2- | bash > /dev/null 2>&1 ; then
  exit 0
else
  echo "The package is installed on the machine" 1>&2
  exit 1
fi
